{
  "name": "inline",
  "displayName": "Inline - Offline AI Code Completion",
  "description": "Privacy-first offline code completion powered by local AI models. Works completely offline with no internet required.",
  "version": "0.1.0",
  "publisher": "inline",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Snippets",
    "Other"
  ],
  "keywords": [
    "ai",
    "code-completion",
    "offline",
    "llm",
    "copilot",
    "local",
    "privacy",
    "machine-learning"
  ],
  "main": "./dist/extension.js",
  "icon": "resources/icon.png",
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:python",
    "onLanguage:java",
    "onLanguage:cpp",
    "onLanguage:go"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "inline-sidebar",
          "title": "Inline",
          "icon": "resources/icon.png"
        }
      ]
    },
    "views": {
      "inline-sidebar": [
        {
          "type": "webview",
          "id": "inline.modelManagerView",
          "name": "Inline Settings"
        }
      ]
    },
    "configuration": {
      "title": "Inline",
      "properties": {
        "inline.enableRealTimeInference": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time code completion"
        },
        "inline.resourceMonitoring": {
          "type": "boolean",
          "default": true,
          "description": "Enable resource monitoring"
        },
        "inline.functionCompletion.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable function completion suggestions"
        },
        "inline.autoCloseBlocks": {
          "type": "boolean",
          "default": true,
          "description": "Automatically close code blocks"
        },
        "inline.autoOffline": {
          "type": "boolean",
          "default": true,
          "description": "Automatically switch to offline mode when network is unavailable"
        },
        "inline.validation.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable code validation and auto-fix suggestions"
        },
        "inline.streaming.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable streaming completions for faster response"
        },
        "inline.streaming.showPartial": {
          "type": "boolean",
          "default": true,
          "description": "Show partial completions while streaming"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "node esbuild.js --production",
    "bundle": "node esbuild.js",
    "compile": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "compile:tests": "tsc -b",
    "pretest": "pnpm build:native && pnpm compile",
    "check-types": "tsc -b",
    "lint": "eslint src --ext ts --config ../../.config/lint/.eslintrc.yml",
    "test": "NODE_PATH=./node_modules node ./dist/test/runTest.js",
    "test:benchmark": "IsBenchmark=true NODE_PATH=./node_modules node ./dist/test/runTest.js benchmark-llm.test.js",
    "build:native:analyzer": "pnpm --filter @inline/analyzer build",
    "build:native:accelerator": "pnpm --filter @inline/accelerator build",
    "build:native": "pnpm build:native:analyzer && pnpm build:native:accelerator",
    "build": "pnpm build:native && pnpm compile",
    "postinstall": "pnpm build:native"
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/glob": "^9.0.0",
    "@types/mocha": "^10.0.10",
    "@types/module-alias": "^2.0.4",
    "@types/node": "24.10.1",
    "@types/vscode": "^1.106.1",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "@vscode/test-electron": "^2.5.2",
    "chai": "^4.3.10",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "glob": "^13.0.0",
    "mocha": "^11.7.5",
    "module-alias": "^2.2.3",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@inline/analyzer": "workspace:*",
    "@inline/accelerator": "workspace:*",
    "@inline/core": "workspace:*",
    "@inline/shared": "workspace:*",
    "@inline/completion": "workspace:*",
    "@inline/intelligence": "workspace:*",
    "@inline/storage": "workspace:*",
    "@inline/language": "workspace:*",
    "@inline/ui": "workspace:*",
    "@inline/events": "workspace:*",
    "@types/tar": "^6.1.13",
    "tar": "^7.5.2",
    "web-tree-sitter": "^0.25.10",
    "node-llama-cpp": "^3.14.4"
  }
}