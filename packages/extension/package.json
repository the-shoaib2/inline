{
  "name": "inline-extension",
  "displayName": "Inline",
  "description": "AI-powered inline code completion extension",
  "version": "0.1.0",
  "publisher": "ratulhasan",
  "engines": {
    "vscode": "^1.80.0"
  },
  "main": "../../out/packages/extension/src/extension.js",
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:python",
    "onLanguage:java",
    "onLanguage:go",
    "onLanguage:rust"
  ],
  "contributes": {
    "configuration": {
      "title": "Inline AI",
      "properties": {
        "inline.enableRealTimeInference": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time AI code completion"
        },
        "inline.resourceMonitoring": {
          "type": "boolean",
          "default": true,
          "description": "Enable resource monitoring"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ../../.config/build/tsconfig.json && node ../../scripts/resolve_aliases.js",
    "watch": "tsc -watch -p ../../.config/build/tsconfig.json",
    "pretest": "npm run compile",
    "check-types": "tsc --noEmit -p ../../.config/build/tsconfig.json",
    "lint": "eslint src --ext ts --config ../../.config/lint/.eslintrc.yml",
    "test": "node ../../out/packages/extension/test/runTest.js",
    "build:native:rust": "pnpm --filter @inline/native build",
    "build:native:cpp": "pnpm --filter @inline/native-cpp build",
    "build:native": "pnpm run build:native:rust && pnpm run build:native:cpp",
    "build": "pnpm run build:native && npm run compile",
    "postinstall": "pnpm run build:native"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@inline/native": "workspace:*",
    "web-tree-sitter": "^0.20.8"
  }
}