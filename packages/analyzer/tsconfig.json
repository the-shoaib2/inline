{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "declaration": false,
        "outDir": "./",
        "rootDir": "./",
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "index.ts"
    ],
    "exclude": [
        "node_modules",
        "target",
        "**/*.d.ts"
    ]
}