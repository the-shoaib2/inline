{
    "name": "@inline/intelligence",
    "version": "0.1.0",
    "description": "AI model management and inference for Inline",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "scripts": {
        "build": "tsc -p tsconfig.json",
        "watch": "tsc -p tsconfig.json --watch",
