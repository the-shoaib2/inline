{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "composite": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "@inline/core": [
                "packages/core/src"
            ],
            "@inline/core/*": [
                "packages/core/src/*"
            ],
            "@inline/shared": [
                "packages/shared/src"
            ],
            "@inline/shared/*": [
                "packages/shared/src/*"
            ],
            "@inline/completion": [
                "packages/features/completion/src"
            ],
            "@inline/completion/*": [
                "packages/features/completion/src/*"
            ],
            "@inline/context": [
                "packages/features/context/src"
            ],
            "@inline/context/*": [
                "packages/features/context/src/*"
            ],
            "@inline/storage": [
                "packages/features/storage/src"
            ],
            "@inline/storage/*": [
                "packages/features/storage/src/*"
            ],
            "@inline/intelligence": [
                "packages/features/intelligence/src"
            ],
            "@inline/intelligence/*": [
                "packages/features/intelligence/src/*"
            ],
            "@inline/language": [
                "packages/features/language/src"
            ],
            "@inline/language/*": [
                "packages/features/language/src/*"
            ],
            "@inline/ui": [
                "packages/features/ui/src"
            ],
            "@inline/ui/*": [
                "packages/features/ui/src/*"
            ],
            "@inline/events": [
                "packages/features/events/src"
            ],
            "@inline/events/*": [
                "packages/features/events/src/*"
            ],
            "@inline/analyzer": [
                "packages/analyzer"
            ],
            "@inline/accelerator": [
                "packages/accelerator"
            ],
            "@inline/extension/utilities/*": [
                "packages/extension/test/utilities/*"
            ],
            "@inline/extension": [
                "packages/extension/src"
            ],
            "@inline/extension/*": [
                "packages/extension/src/*",
                "packages/extension/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist",
        "out",
        "build"
    ]
}