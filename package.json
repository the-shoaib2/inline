{
  "name": "inline",
  "displayName": "Inline - Offline code suggestions",
  "description": "GitHub Copilot-like code suggestions that works entirely offline with automatic model management",
  "version": "0.1.0",
  "publisher": "inline",
  "author": "Inline Team",
  "icon": "resources/icon.png",
  "license": "Apache-2.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Snippets"
  ],
  "keywords": [
    "completion",
    "offline",
    "llm",
    "code-completion",
    "intellisense"
  ],
  "activationEvents": [
    "onLanguage:*"
  ],
  "main": "./out/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "inline.modelManager",
        "title": "Inline: Model Manager",
        "category": "Inline"
      },
      {
        "command": "inline.toggleOffline",
        "title": "Inline: Toggle Offline Mode",
        "category": "Inline"
      },
      {
        "command": "inline.clearCache",
        "title": "Inline: Clear Cache",
        "category": "Inline"
      },
      {
        "command": "inline.downloadModel",
        "title": "Inline: Download Model",
        "category": "Inline"
      },
      {
        "command": "inline.settings",
        "title": "Inline: Settings",
        "category": "Inline"
      },
      {
        "command": "inline.showLogs",
        "title": "Inline: Show Logs",
        "category": "Inline"
      },
      {
        "command": "inline.showErrorLog",
        "title": "Inline: Show Error Log",
        "category": "Inline"
      }
    ],
    "views": {
      "inline-sidebar": [
        {
          "type": "webview",
          "id": "inline.modelManagerView",
          "name": "Model Manager"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "inline-sidebar",
          "title": "Inline",
          "icon": "$(cloud-download)"
        }
      ]
    },
    "configuration": {
      "title": "Inline",
      "properties": {
        "inline.autoOffline": {
          "type": "boolean",
          "default": true,
          "description": "Automatically activate offline mode when internet is unavailable"
        },
        "inline.defaultModel": {
          "type": "string",
          "default": "deepseek-coder:6.7b",
          "description": "Default model to use for completions"
        },
        "inline.maxTokens": {
          "type": "number",
          "default": 512,
          "description": "Maximum tokens for completion generation"
        },
        "inline.temperature": {
          "type": "number",
          "default": 0.1,
          "minimum": 0,
          "maximum": 1,
          "description": "Temperature for model generation (lower = more deterministic)"
        },
        "inline.cacheSize": {
          "type": "number",
          "default": 100,
          "description": "Maximum number of cached completions"
        },
        "inline.resourceMonitoring": {
          "type": "boolean",
          "default": true,
          "description": "Monitor system resources and adjust model usage accordingly"
        },
        "inline.codingRules": {
          "type": "array",
          "default": [],
          "description": "Custom coding rules and style preferences",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "pattern": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "enabled": {
                "type": "boolean",
                "default": true
              }
            }
          }
        },
        "inline.modelPath": {
          "type": "string",
          "default": "",
          "description": "Custom path for storing downloaded models"
        },
        "inline.autoDownload": {
          "type": "boolean",
          "default": false,
          "description": "Automatically download recommended models when offline"
        },
        "inline.contextWindow": {
          "type": "number",
          "default": 4096,
          "description": "Context window size for code analysis"
        },
        "inline.suggestionDelay": {
          "type": "number",
          "default": 500,
          "minimum": 100,
          "maximum": 2000,
          "description": "Delay in milliseconds before showing suggestions"
        },
        "inline.enableFormatting": {
          "type": "boolean",
          "default": true,
          "description": "Format code suggestions according to user preferences"
        },
        "inline.excludePatterns": {
          "type": "array",
          "default": [
            "node_modules",
            ".git",
            "dist",
            "build",
            "out",
            ".vscode",
            ".github",
            "*.vsix",
            "coverage",
            ".nyc_output"
          ],
          "description": "File patterns to exclude from context analysis (especially useful during extension development)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run build",
    "build": "pnpm run clean && tsc -p ./",
    "compile": "tsc -p ./ --incremental",
    "compile:watch": "tsc -p ./ --watch --incremental",
    "pretest": "pnpm run compile",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "test": "pnpm run test:unit && pnpm run test:e2e",
    "test:unit": "mocha --require ts-node/register --require test/unit/setup.ts 'test/unit/**/*.test.ts'",
    "test:integration": "mocha --require ts-node/register 'test/integration/**/*.test.ts'",
    "test:e2e": "node ./out/test/runTest.js",
    "test:coverage": "nyc pnpm test",
    "benchmark": "node ./test/benchmark.js",
    "benchmark:full": "pnpm run compile && node ./out/test/benchmark/performance.benchmark.js",
    "package": "vsce package",
    "publish:patch": "./scripts/publish.sh patch --auto",
    "publish:minor": "./scripts/publish.sh minor --auto",
    "publish:major": "./scripts/publish.sh major --auto",
    "release": "./scripts/release.sh",
    "clean": "rimraf out dist lib *.vsix"
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/module-alias": "^2.0.4",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^3.7.1",
    "chai": "^4.3.10",
    "eslint": "^8.54.0",
    "glob": "^13.0.0",
    "mocha": "^10.2.0",
    "module-alias": "^2.2.3",
    "nyc": "^15.1.0",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "node-fetch": "^3.3.2",
    "semver": "^7.5.4",
    "tar": "^6.2.0",
    "ws": "^8.14.2"
  }
}