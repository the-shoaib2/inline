{
  "name": "inline",
  "displayName": "Inline - Offline code suggestions (Alpha)",
  "description": "Code suggestions that works entirely offline with automatic model management",
  "version": "1.1.0",
  "publisher": "inline",
  "author": "Inline Team",
  "icon": "resources/icon.png",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/the-shoaib2/inline"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Snippets"
  ],
  "keywords": [
    "completion",
    "offline",
    "llm",
    "code-completion",
    "intellisense"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:*"
  ],
  "main": "./out/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "inline.modelManager",
        "title": "Inline: Model Manager",
        "category": "Inline"
      },
      {
        "command": "inline.toggleOffline",
        "title": "Inline: Toggle Offline Mode",
        "category": "Inline"
      },
      {
        "command": "inline.clearCache",
        "title": "Inline: Clear Cache",
        "category": "Inline"
      },
      {
        "command": "inline.downloadModel",
        "title": "Inline: Download Model",
        "category": "Inline"
      },
      {
        "command": "inline.settings",
        "title": "Inline: Settings",
        "category": "Inline"
      },
      {
        "command": "inline.showLogs",
        "title": "Inline: Show Logs",
        "category": "Inline"
      },
      {
        "command": "inline.showErrorLog",
        "title": "Inline: Show Error Log",
        "category": "Inline"
      },
      {
        "command": "inline.downloadFromUrl",
        "title": "Inline: Download Model from URL",
        "category": "Inline"
      },
      {
        "command": "inline.openModelsFolder",
        "title": "Inline: Open Models Folder",
        "category": "Inline"
      },
      {
        "command": "inline.checkForUpdates",
        "title": "Inline: Check for Model Updates",
        "category": "Inline"
      },
      {
        "command": "inline.generateTests",
        "title": "Inline: Generate Tests",
        "category": "Inline"
      },
      {
        "command": "inline.generateDocstring",
        "title": "Inline: Generate Documentation",
        "category": "Inline"
      },
      {
        "command": "inline.explainError",
        "title": "Inline: Explain Error",
        "category": "Inline"
      },
      {
        "command": "inline.scanSecurity",
        "title": "Inline: Scan for Security Issues",
        "category": "Inline"
      },
      {
        "command": "inline.generatePRDescription",
        "title": "Inline: Generate PR Description",
        "category": "Inline"
      },
      {
        "command": "inline.generateCommitMessage",
        "title": "Inline: Generate Commit Message",
        "category": "Inline"
      },
      {
        "command": "inline.documentFile",
        "title": "Inline: Document Entire File",
        "category": "Inline"
      },
      {
        "command": "inline.generateTestFile",
        "title": "Inline: Generate Test File",
        "category": "Inline"
      },
      {
        "command": "inline.suggestCommand",
        "title": "Inline: Suggest Terminal Command",
        "category": "Inline"
      },
      {
        "command": "inline.explainCommand",
        "title": "Inline: Explain Terminal Command",
        "category": "Inline"
      },
      {
        "command": "inline.refactorCode",
        "title": "Inline: Refactor Code",
        "category": "Inline"
      },
      {
        "command": "inline.suggestRefactorings",
        "title": "Inline: Suggest Refactorings",
        "category": "Inline"
      },
      {
        "command": "inline.showEventStats",
        "title": "Inline: Show Event Tracking Statistics",
        "category": "Inline"
      },
      {
        "command": "inline.clearEventHistory",
        "title": "Inline: Clear Event History",
        "category": "Inline"
      }
    ],
    "views": {
      "inline-sidebar": [
        {
          "type": "webview",
          "id": "inline.modelManagerView",
          "name": "Model Manager",
          "icon": "$(cloud-download)"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "inline-sidebar",
          "title": "Inline",
          "icon": "$(cloud-download)"
        }
      ]
    },
    "configuration": {
      "title": "Inline",
      "properties": {
        "inline.autoOffline": {
          "type": "boolean",
          "default": true,
          "description": "Automatically activate offline mode when internet is unavailable"
        },
        "inline.defaultModel": {
          "type": "string",
          "default": "deepseek-coder:6.7b",
          "description": "Default model to use for completions"
        },
        "inline.maxTokens": {
          "type": "number",
          "default": 512,
          "description": "Maximum tokens for completion generation"
        },
        "inline.temperature": {
          "type": "number",
          "default": 0.1,
          "minimum": 0,
          "maximum": 1,
          "description": "Temperature for model generation (lower = more deterministic)"
        },
        "inline.cacheSize": {
          "type": "number",
          "default": 100,
          "description": "Maximum number of cached completions"
        },
        "inline.resourceMonitoring": {
          "type": "boolean",
          "default": true,
          "description": "Monitor system resources and adjust model usage accordingly"
        },
        "inline.codingRules": {
          "type": "array",
          "default": [],
          "description": "Custom coding rules and style preferences",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "pattern": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "enabled": {
                "type": "boolean",
                "default": true
              }
            }
          }
        },
        "inline.modelPath": {
          "type": "string",
          "default": "",
          "description": "Custom path for storing downloaded models"
        },
        "inline.autoDownload": {
          "type": "boolean",
          "default": false,
          "description": "Automatically download recommended models when offline"
        },
        "inline.contextWindow": {
          "type": "number",
          "default": 16384,
          "description": "Context window size for code analysis (Set to 16k for maximum file fidelity)"
        },
        "inline.suggestionDelay": {
          "type": "number",
          "default": 500,
          "minimum": 100,
          "maximum": 2000,
          "description": "Delay in milliseconds before showing suggestions"
        },
        "inline.enableFormatting": {
          "type": "boolean",
          "default": true,
          "description": "Format code suggestions according to user preferences"
        },
        "inline.excludePatterns": {
          "type": "array",
          "default": [
            "node_modules",
            ".git",
            "dist",
            "build",
            "out",
            ".vscode",
            ".github",
            "*.vsix",
            "coverage",
            ".nyc_output"
          ],
          "description": "File patterns to exclude from context analysis (especially useful during extension development)"
        },
        "inline.enableRealTimeInference": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time code suggestions as you type"
        },
        "inline.inferenceTimeout": {
          "type": "number",
          "default": 3000,
          "description": "Maximum time in milliseconds to wait for model inference"
        },
        "inline.maxCompletionLines": {
          "type": "number",
          "default": 5,
          "description": "Maximum number of lines to generate for code suggestions"
        },
        "inline.modelWarmup": {
          "type": "boolean",
          "default": true,
          "description": "Preload the model when the extension activates for faster first response"
        },
        "inline.downloadConcurrency": {
          "type": "number",
          "default": 2,
          "minimum": 1,
          "maximum": 5,
          "description": "Maximum number of concurrent model downloads"
        },
        "inline.modelRegistry": {
          "type": "string",
          "default": "",
          "description": "Custom model registry URL for downloading models"
        },
        "inline.autoUpdate": {
          "type": "boolean",
          "default": false,
          "description": "Automatically check for and download model updates"
        },
        "inline.downloadRetries": {
          "type": "number",
          "default": 3,
          "minimum": 1,
          "maximum": 10,
          "description": "Number of retry attempts for failed downloads"
        },
        "inline.debounce.min": {
          "type": "number",
          "default": 25,
          "minimum": 0,
          "maximum": 500,
          "description": "Minimum debounce delay in milliseconds before triggering suggestions (0 for errors, 25 for functions)"
        },
        "inline.inference.threads": {
          "type": "number",
          "default": 4,
          "minimum": 1,
          "maximum": 16,
          "description": "Number of CPU threads for inference (0 = auto-detect)"
        },
        "inline.inference.gpuLayers": {
          "type": "number",
          "description": "Number of layers to offload to GPU (undefined = auto-detect, 0 = CPU only)"
        },
        "inline.streaming.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable streaming token generation for faster perceived latency"
        },
        "inline.streaming.showPartial": {
          "type": "boolean",
          "default": true,
          "description": "Show partial completions as tokens are generated (ghost text)"
        },
        "inline.completion.speculativeDecoding": {
          "type": "boolean",
          "default": true,
          "description": "Enable speculative decoding for faster multi-line completions"
        },
        "inline.completion.maxCandidates": {
          "type": "number",
          "default": 3,
          "minimum": 1,
          "maximum": 5,
          "description": "Number of completion candidates to generate in parallel"
        },
        "inline.kvCache.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable KV cache for faster repeated inferences"
        },
        "inline.performance.monitoring": {
          "type": "boolean",
          "default": false,
          "description": "Enable performance monitoring and metrics collection"
        },
        "inline.resourceMonitoring.memoryThreshold": {
          "type": "number",
          "default": 0.98,
          "minimum": 0.5,
          "maximum": 1.0,
          "description": "Memory usage threshold (0-1) before warnings are logged. Uses process heap ratio, not system memory."
        },
        "inline.deduplication.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable smart code deduplication to prevent repetitive code generation"
        },
        "inline.deduplication.similarityThreshold": {
          "type": "number",
          "default": 0.8,
          "minimum": 0.0,
          "maximum": 1.0,
          "description": "Similarity threshold for duplicate detection (0.0-1.0). Higher values are more strict."
        },
        "inline.deduplication.minBlockSize": {
          "type": "number",
          "default": 20,
          "minimum": 5,
          "maximum": 100,
          "description": "Minimum characters for a code block to be considered for deduplication"
        },
        "inline.deduplication.detectDistributedRepetition": {
          "type": "boolean",
          "default": true,
          "description": "Detect A-B-A-B style distributed repetition patterns"
        },
        "inline.deduplication.useAST": {
          "type": "boolean",
          "default": true,
          "description": "Use AST-based analysis for structural duplicate detection (more accurate but slightly slower)"
        },
        "inline.context.enableMultiFileAnalysis": {
          "type": "boolean",
          "default": true,
          "description": "Enable multi-file context analysis for better code understanding"
        },
        "inline.context.maxDepth": {
          "type": "number",
          "default": 3,
          "minimum": 1,
          "maximum": 5,
          "description": "Maximum depth for analyzing related files through imports"
        },
        "inline.context.includeTypes": {
          "type": "boolean",
          "default": true,
          "description": "Include type definitions in context for type-aware completions"
        },
        "inline.context.includeSimilarCode": {
          "type": "boolean",
          "default": true,
          "description": "Include similar code examples from project"
        },
        "inline.context.maxRelatedFiles": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "maximum": 10,
          "description": "Maximum number of related files to analyze"
        },
        "inline.context.adaptiveRatio": {
          "type": "boolean",
          "default": true,
          "description": "Use adaptive prefix/suffix ratio based on cursor position"
        },
        "inline.context.symbolCacheSize": {
          "type": "number",
          "default": 500,
          "minimum": 100,
          "maximum": 2000,
          "description": "Maximum number of files to cache symbols for"
        },
        "inline.fim": {
          "type": "object",
          "description": "Custom FIM (Fill-In-The-Middle) tokens for unknown models. Overrides auto-detection.",
          "properties": {
            "prefix": {
              "type": "string",
              "description": "Prefix token, e.g. <PRE>"
            },
            "suffix": {
              "type": "string",
              "description": "Suffix token, e.g. <SUF>"
            },
            "middle": {
              "type": "string",
              "description": "Middle token, e.g. <MID>"
            }
          }
        },
        "inline.events.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable event tracking system for enhanced context awareness"
        },
        "inline.events.throttleMs": {
          "type": "number",
          "default": 100,
          "minimum": 50,
          "maximum": 1000,
          "description": "Event throttling delay in milliseconds"
        },
        "inline.events.bufferSize": {
          "type": "number",
          "default": 1000,
          "minimum": 100,
          "maximum": 10000,
          "description": "Maximum number of events to keep in buffer"
        },
        "inline.events.trackMouse": {
          "type": "boolean",
          "default": false,
          "description": "Enable mouse tracking (privacy-aware, opt-in)"
        },
        "inline.events.trackKeystrokes": {
          "type": "boolean",
          "default": false,
          "description": "Enable keystroke pattern tracking (privacy-aware, opt-in, only timing)"
        },
        "inline.events.storageEnabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable event storage for analytics"
        },
        "inline.events.maxStorageSize": {
          "type": "number",
          "default": 10000,
          "minimum": 1000,
          "maximum": 100000,
          "description": "Maximum number of events to store"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish:disabled": "pnpm run build",
    "build": "pnpm run clean && tsc -p ./ && pnpm run build:ui && echo 'Build successful!'",
    "build:ui": "cd webview && pnpm install && pnpm run build",
    "watch:ui": "cd webview && pnpm run watch",
    "compile": "tsc -p ./ --incremental",
    "compile:watch": "tsc -p ./ --watch --incremental",
    "pretest": "pnpm run compile",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "test": "pnpm run test:unit && pnpm run test:e2e",
    "test:unit": "mocha --require ts-node/register --require test/unit/setup.ts 'test/unit/**/*.test.ts'",
    "test:integration": "mocha --require ts-node/register 'test/integration/**/*.test.ts'",
    "test:e2e": "node ./out/test/runTest.js",
    "test:coverage": "nyc pnpm test",
    "benchmark": "node ./test/benchmark.js",
    "benchmark:full": "pnpm run compile && node ./out/test/benchmark/performance.benchmark.js",
    "package": "pnpm run build && vsce package --no-dependencies --no-git-tag-version",
    "publish:patch": "./scripts/publish.sh patch --auto",
    "publish:minor": "./scripts/publish.sh minor --auto",
    "publish:major": "./scripts/publish.sh major --auto",
    "release": "./scripts/release.sh",
    "clean": "rimraf --glob out dist lib *.vsix"
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/module-alias": "^2.0.4",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^3.7.1",
    "chai": "^4.3.10",
    "eslint": "^8.54.0",
    "glob": "^13.0.0",
    "mocha": "^10.2.0",
    "module-alias": "^2.2.3",
    "nyc": "^15.1.0",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "node-fetch": "^3.3.2",
    "node-llama-cpp": "^3.14.2",
    "semver": "^7.5.4",
    "tar": "^6.2.0",
    "ws": "^8.14.2"
  }
}